<article class="owl-article article-big">
    <div class="item">
        <a href="{{ entry.link }}" class="article-cover">
			{% set image = Image( entry.thumbnail ) %}
			<picture>
				<source
					type="image/webp"
					srcset="{{ image.src|resize(883,442, 'center')|towebp }}"
					width="883"
					height="442"
				/>
				<img
					srcset="{{ image.src|resize(883,442, 'center') }}"
					width="883"
					height="442"
				/>
            </picture>
        </a>
    </div>
    <div class="item article-content">
        <h2>
            <a href="{{ entry.link }}">
				{{ entry.title }}
            </a>
        </h2>

        {{ entry.preview.length(50).read_more('')|wpautop }}

        {% include 'views/parts/icons/arrow.twig' %}
    </div>
</article>
