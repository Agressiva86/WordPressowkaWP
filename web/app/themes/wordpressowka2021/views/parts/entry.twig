<article class="item item-post">
    <a href="{{ entry.link }}" class="box">
        <div class="inner">
			<time>{{ entry.date(options.date_format) }}</time>
			<h3>{{ entry.title }}</h3>
			<p>
				<strong>{{ __( 'Tematy:', 'sasquatch' ) }}</strong>
				{{ entry.tags() | join(', ') }}
			</p>
		</div>
    </a>

	{% include 'views/parts/icons/arrow.twig' %}
</article>
