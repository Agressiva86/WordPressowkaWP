{#
	Title: Owl header newsletter
	Description: Header with newsletter
	Category: formatting
	Icon: admin-comments
	Keywords: header
	Mode: preview
	Align: center
	PostTypes: post articles page
	SupportsMode: true
	SupportsMultiple: false
	SupportsAlign: center
#}

<section class="home-top m-b-100">
	<div class="item empty">
	</div>

	<div class="item newsletter">
		{% if options.tytul_newslettera %}
		<h1>{{ options.tytul_newslettera }}</h1>
		{% endif %}
		{% if options.opis_newslettera %}
		{{ options.opis_newslettera }}
		{% endif %}

		<form action="{{ options.mailchimp_url }}" method="post" name="mc-embedded-subscribe-form" class="validate">
			<div>
				<label>{{ __( 'Twoje imię', 'sasquatch' ) }}</label>
				<input type="text" placeholder="{{ __( 'Podaj swoje imię', 'sasquatch' ) }}">
			</div>
			<div>
				<label>{{ __( 'Twój adres email', 'sasquatch' ) }}</label>
				<input type="email" placeholder="{{ __( 'Podaj email', 'sasquatch' ) }}">
			</div>
			<div>
				<input type="submit" value="{{ __( 'Zapisz się teraz', 'sasquatch' ) }}">
			</div>
		</form>
		{% if options.reguly_newslettera %}
		<div class="small">
			{{ options.reguly_newslettera }}
		</div>
		{% endif %}
	</div>
	<div class="item photo">
		{#
			ultrawide: 1320x1200
			fullHD: 750x710
			1024px x 1400px: 600x650
		#}
		<picture>
			{% set newsletter_image = Image( options.obrazek_newslettera ) %}
			<source
				media="(max-width:640px)"
				srcset="{{ newsletter_image.src|resize(1,1)|towebp }}"
			/>
			<source
				media="(min-width: 1024px) and (max-width:1400px)"
				type="image/webp"
				srcset="{{ newsletter_image.src|resize(600,650)|towebp }}"
				width="600"
				height="650"
			/>
			<source
				media="(min-width: 1024px) and (max-width:1400px)"
				srcset="{{ newsletter_image.src|resize(600,650) }}"
				width="600"
				height="650"
			/>
			<source
				media="(min-width: 1401px) and (max-width:1920px)"
				type="image/webp"
				srcset="{{ newsletter_image.src|resize(750,710)|towebp }}"
				width="750"
				height="710"
			/>
			<source
				media="(min-width: 1401px) and (max-width:1920px)"
				srcset="{{ newsletter_image.src|resize(750,710) }}"
				width="750"
				height="710"
			/>
			<source
				type="image/webp"
				srcset="{{ newsletter_image.src|resize(1320,1200)|towebp }}"
				width="1320"
				height="1200"
			/>
			<img
				src="{{ newsletter_image.src|resize(1320,1200) }}"
				width="1320"
				height="1200"
			/>
		</picture>
	</div>
</section>
