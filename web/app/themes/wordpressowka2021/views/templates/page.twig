
{% extends "/layouts/base.twig" %}

{% block main %}

<section class="sidebar-mobile">
	<div class="inner">
		<a href="" class="close-x">
			<svg height="329pt" viewBox="0 0 329.26933 329" width="329pt" xmlns="http://www.w3.org/2000/svg"><path d="m194.800781 164.769531 128.210938-128.214843c8.34375-8.339844 8.34375-21.824219 0-30.164063-8.339844-8.339844-21.824219-8.339844-30.164063 0l-128.214844 128.214844-128.210937-128.214844c-8.34375-8.339844-21.824219-8.339844-30.164063 0-8.34375 8.339844-8.34375 21.824219 0 30.164063l128.210938 128.214843-128.210938 128.214844c-8.34375 8.339844-8.34375 21.824219 0 30.164063 4.15625 4.160156 9.621094 6.25 15.082032 6.25 5.460937 0 10.921875-2.089844 15.082031-6.25l128.210937-128.214844 128.214844 128.214844c4.160156 4.160156 9.621094 6.25 15.082032 6.25 5.460937 0 10.921874-2.089844 15.082031-6.25 8.34375-8.339844 8.34375-21.824219 0-30.164063zm0 0"/></svg>
		</a>
		<p>
			Dołącz do subskrybentów
		</p>
		<form class="text-left" action="{{ options.mailchimp_url }}" method="post"
			name="mc-embedded-subscribe-form" class="validate">
			<div>
				<input type="email" placeholder="{{ __( 'Twój email', 'sasquatch' ) }}">
			</div>
			<div>
				<input type="submit" value="{{ __( 'Dołącz', 'sasquatch' ) }}">
			</div>
		</form>
	</div>
</section>

<section class="p-b-100">
	<div class="grid-single">
		<div class="item empty">
		</div>

		<div class="item item-single entry-content">
			<header>
				<h1>{{ post.title }}</h1>
			</header>

			{{ post.content }}
		</div>

		<div class="item item-fixed">
			<div class="sidebar">
				{% if options.tytul_newslettera %}
				<div class="item">
					<h2 class="section-title text-center">
						{{ options.tytul_newslettera }}
					</h2>
				</div>
				{% endif %}

				<div class="newsletter-form">
					{% if options.opis_newslettera %}
						{{ options.opis_newslettera }}
					{% endif %}

					<form class="text-left" action="{{ options.mailchimp_url }}" method="post"
						name="mc-embedded-subscribe-form" class="validate">
						<div>
							<label>{{ __( 'Twój adres email', 'sasquatch' ) }}</label>
							<input type="email" placeholder="{{ __( 'Podaj email', 'sasquatch' ) }}">
						</div>
						<div>
							<input type="submit" value="{{ __( 'Zapisz się teraz', 'sasquatch' ) }}">
						</div>
					</form>

					{% if options.reguly_newslettera %}
					<div class="small">
						{{ options.reguly_newslettera }}
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}
