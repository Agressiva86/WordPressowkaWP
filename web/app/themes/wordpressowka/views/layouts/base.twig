{% block header %}
<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="{{ function( 'language_attributes' ) }}" > <![endif]-->
<html {{ function( 'language_attributes' ) }}>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-134066876-1"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-134066876-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#142664">
    {{ function( 'wp_head' ) }}

    <style type="text/css">
    :root {
        --primary: #2A296E;
        --primary-light: #524FD4;
    }
    </style>
</head>
<body class="{{ body_class }} {{ page404 ? 'page404' }}">
{% endblock %}
{% include 'views/parts/navigation.twig' %}
<main role="main" id="wrapper">
    {% block left_column %}
     <div id="left-column">
        {% include 'views/parts/logo.twig' %}
        <div class="hamburger-wrapper">
          <div class="hamburger">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
          </div>
        </div>
    </div>
    {% endblock %}

    {% block right_column %}
        {% include 'views/parts/newsletter.twig' %}

        {% include 'views/parts/footer.twig' %}
    {% endblock %}
</main>

{% block footer %}
    {{ function( 'wp_footer' ) }}
    </body>
</html>
{% endblock %}
