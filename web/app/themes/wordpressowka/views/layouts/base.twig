{% block header %}
<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="{{ function( 'language_attributes' ) }}" > <![endif]-->
<html {{ function( 'language_attributes' ) }}>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-134066876-1"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-134066876-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="{{ options.kolor }}">
    {{ function('wp_head') }}

    <link rel="alternate" type="application/rss+xml" title="Wordpressowka" href="{{ site.link }}/feed/" />

    <style type="text/css">
    :root {
        --primary: {{ options.kolor }};
        --primary-light: {{ options.kolor_primary_light }};
    }
    </style>
</head>
{% endblock %}
{% fold %}
<body class="{{ body_class }} {{ page404 ? 'page404' }} {{ newsletter ? 'newsletter' }}">
{# % include 'views/parts/navigation.twig' % #}
{% include 'views/parts/header.twig' %}
{% endfold %}
{% fold %}
<main role="main" id="wrapper">
    {% block right_column %}
        {% include 'views/parts/newsletter.twig' %}
    {% endblock %}
</main>
{% endfold %}
{% include 'views/parts/footer.twig' %}
{% block footer %}
    {{ function( 'wp_footer' ) }}
    <link rel="stylesheet" href="{{ function( 'asset_path', 'css/app.css' ) }}" type="text/css" media="all">
    </body>
</html>
{% endblock %}
