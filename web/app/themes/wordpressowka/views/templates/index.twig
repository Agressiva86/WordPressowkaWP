{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			{% include 'views/parts/header.twig' %}
			
			<h1 class="intro">
				{{ options.opis|striptags('<strong><a>') }}
			</h1>

			<article class="article">
				{% include 'views/blocks/title.twig' %}
				
				<div class="article-cover">
					{% if post.thumbnail %}
						<picture>
							<source 
									media="(max-width: 1023px)"
									srcset="{{ TimberImage(post.thumbnail).src | resize(700, 400) }}"
							/>
							<img 
									src="{{ TimberImage(post.thumbnail).src | resize(1200, 630) }}"
									alt=""
							/>
						</picture>
          {% endif %}
				</div>

				{{ post.content }}
			</article>
			
			<ul class="pagination">
					<li>
					{% if post.prev_post %}
						<a href="{{ post.prev_post }}">Nowsze wydanie</a>
					{% endif %}
					</li>
			
					<li>
					{% if post.next_post %}
						<a href="{{ post.next_post }}">Wcze≈õniejsze wydanie</a>
					{% endif %}
					</li>
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
