{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			{% include 'views/parts/header.twig' %}
			
			<h1 class="intro">
				WordPress News - najnowsze wiadomości o WordPressie, pluginach <a href="" data-link="Subskrybuj">Subskrybuj</a>
			</h1>

			{% for post in posts %}
			<article class="article">
				{% include 'views/blocks/title.twig' %}
				{{ post.content }}
			</article>

			{% endfor %}
			
			<ul class="pagination">
				<li><a href="">Poprzednie wydanie</a></li>
				<li><a href="">Następne wydanie</a></li>
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
