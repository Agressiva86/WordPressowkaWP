{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			{% include 'views/parts/header.twig' %}
			
			<h1 class="intro">
				{{ options.opis|striptags('<strong><a>') }}
			</h1>

			{% for post in posts %}
			<article class="article">
				{% include 'views/blocks/title.twig' %}
				{{ post.content }}
			</article>

			{% endfor %}
			
			<ul class="pagination">
					<li>
						{% if posts.pagination.prev %}<a href="{{ posts.pagination.prev.link }}">Nowsze wydanie</a>{% endif %}
					</li>
			
					<li>
						
						{% if posts.pagination.next %}<a href="{{ posts.pagination.next.link }}">Wcze≈õniejsze wydanie</a>{% endif %}
					</li>
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
