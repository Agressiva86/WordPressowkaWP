{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			<h1 class="intro">
				{{ options.opis|striptags('<strong><a>') }}
			</h1>

			<article class="article">
				{% include 'views/blocks/title.twig' %}

				<img class="display-block m-b-30 article-cover" src="{{ post.thumbnail }}" alt="" />

				{{ post.content }}

				<div class="tags">
					Tagi:
					<a href="">lorem ipsum</a>,
					<a href="">lorem ipsum dolor</a>,
					<a href="">sit lorem ipsum</a>,
					<a href="">lorem ipsum</a>,
					<a href="">lorem ipsum dolor</a>
				</div>
			
				{% if is_single %}
					{% if post.status == 'publish' %}
						<div class="comments-frame">
							{{ function('comments_template') }}
						</div>
					{% endif %}
				{% else %}
					<a class="comments-btn" href="{{ post.link }}#comments">Dołącz do dyskusji</a>
				{% endif %}

			</article>
			
			<ul class="pagination">
				<li>
				{% if post.prev_post %}
					<a href="{{ post.prev_post }}">Nowsze wydanie</a>
				{% endif %}
				</li>
		
				<li>
				{% if post.next_post %}
					<a href="{{ post.next_post }}">Wcześniejsze wydanie</a>
				{% endif %}
				</li>
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
