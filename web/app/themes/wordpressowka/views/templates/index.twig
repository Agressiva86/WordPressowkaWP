{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			{% include 'views/parts/header.twig' %}
			
			<h1 class="intro">
				{{ options.opis|striptags('<strong><a>') }}
			</h1>

			{% for post in posts %}
			<article class="article">
				{% include 'views/blocks/title.twig' %}
				{{ post.content }}
			</article>

			{% endfor %}
			
			<ul class="pagination">
				{% if posts.pagination.next %}
					<li><a href="{{ posts.pagination.next.link }}">NastÄ™pne wydanie</a></li>
				{% endif %}
				{% if posts.pagination.prev %}
					<li><a href="{{ posts.pagination.prev.link }}">Poprzednie wydanie</a></li>
				{% endif %}
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
