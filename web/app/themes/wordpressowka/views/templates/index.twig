{% extends "/layouts/base.twig" %}

{% block right_column %}
	<div id="right-column">
		<div role="list" id="content">
			{% include 'views/parts/header.twig' %}
			
			<h1 class="intro">
				{{ options.opis|striptags('<strong><a>') }}
			</h1>

			<article class="article">
				{% include 'views/blocks/title.twig' %}

				{{ post.content }}

				{% if is_single %}
					<span id="comments"></span>
					{% if post.status == 'publish' %}
    	                {{ function('comments_template') }}
	                {% endif %}
				{% else %}
					<a href="{{ post.link }}#comments">Podystkuj z nami</a>
				{% endif %}
			</article>
			
			<ul class="pagination">
				<li>
				{% if post.prev_post %}
					<a href="{{ post.prev_post }}">Nowsze wydanie</a>
				{% endif %}
				</li>
		
				<li>
				{% if post.next_post %}
					<a href="{{ post.next_post }}">Wcze≈õniejsze wydanie</a>
				{% endif %}
				</li>
			</ul>

		</div>
		
		{{ parent() }}
	</div>
{% endblock %}
