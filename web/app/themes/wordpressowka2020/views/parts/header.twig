{% if options.napis_partner %}
<div class="partner-mobile">
	<span>{{ options.napis_partner }}</span>
		<picture>
			<source
				type="image/webp"
				src="{{ Image(options.logo).src|towebp }}"
				width="{{ Image(options.logo).width }}"
				height="{{ Image(options.logo).height }}"
				alt=""
			>
			<img
				src="{{ Image(options.logo).src }}"
				width="{{ Image(options.logo).width }}"
				height="{{ Image(options.logo).height }}"
				alt=""
			>
		</picture>
</div>
{% endif %}
