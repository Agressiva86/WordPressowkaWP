<div class="sidebar">

	{% if options.tytul_newslettera %}
		<h3>{{ options.tytul_newslettera }}</h3>
	{% endif %}

	{% if options.opis_newslettera %}
		{{ options.opis_newslettera | wpautop }}
	{% endif %}

	<form
		action="https://wordpressowka.us20.list-manage.com/subscribe/post?u=bc1349d1dfefba72bdd8c3974&amp;id=f8311d93e4"
		method="post" name="mc-embedded-subscribe-form" class="validate">
		<label><input type="name" placeholder="Twoje imię" name="NAME" required></label>
		<label><input type="email" placeholder="Twój adres email" name="EMAIL" required></label>
		<div>
			<input type="submit" value="Zapisz się teraz!" class="button color-primary small" name="subscribe">
		</div>
	</form>

	{% if options.reguly_newslettera %}
		<small role="alert">
			{{ options.reguly_newslettera }}
		</small>
	{% endif %}

	{% if options.social_media_tytul %}
		<h3>{{ options.social_media_tytul }}</h3>
	{% endif %}

	<div class="profiles">
		<a href="{{ options.facebook }}" target="_blank" rel="noopener">Facebook</a>
		<a href="{{ options.linkedin }}" target="_blank" rel="noopener">Linkedin</a>
		<a href="{{ options.instagram }}" target="_blank" rel="noopener">Instagram</a>
		<a href="{{ options.twitter }}" target="_blank" rel="noopener">Twitter</a>
	</div>
</div>
