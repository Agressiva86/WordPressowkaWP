{% extends "/layouts/base.twig" %}

{% block main %}
{% include 'parts/site-name.twig' %}

<article class="single-entry-wrapper">
	<header class="single-entry-header" role="heading">
		<h2>{{ post.title }}</h2>
		<time>{{ post.date('d F Y') }}</time>
	</header>
	<div class="single-entry-columns" role="grid">
		<div class="item entry-content" role="article">
			{{ post.content }}

			<h4>Podoba Ci się to wydanie? Podaj dalej!</h4>
			<div class="share">
				<a href="">
					{% include 'views/parts/icons/facebook.twig' %}
					Udostępnij na Facebooku
				</a>
				<a href="">
					{% include 'views/parts/icons/linkedin.twig' %}
					Udostępnij na Linkedin
				</a>
				<a href="">
					{% include 'views/parts/icons/twitter.twig' %}
					Udostępnij na Twitterze
				</a>
			</div>
		</div>

		<aside class="item entry-sidebar" role="form">
			{% include 'views/parts/sidebar.twig' %}
		</aside>
	</div>
</article>

{% include 'views/parts/editions-scroll.twig' %}

{% endblock %}
