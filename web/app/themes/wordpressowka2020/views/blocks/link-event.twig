{% set img = Image( fields.obrazek ) %}

<div class="wordpressowka-block">
	<div class="wordpressowka-link event" role="link">
		<div class="inner">
			<picture role="img">
			<source
				media="(max-width:880px)"
				type="image/webp"
				data-src="{{ img | resize( 880, 450, 'center' ) | towebp }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 880 450'%3E%3C/svg%3E"
			/>
			<source
				media="(max-width:880px)"
				data-src="{{ img | resize( 880, 450, 'center' ) }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 880 450'%3E%3C/svg%3E"
			/>
			<source
				media="(min-width: 8811px) and (max-width:1023px)"
				type="image/webp"
				data-src="{{ img | resize( 1024, 900, 'center' ) | towebp }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 900'%3E%3C/svg%3E"

			/>
			<source
				media="(min-width: 8811px) and (max-width:1023px)"
				data-src="{{ img | resize( 1024, 900, 'center' ) }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 900'%3E%3C/svg%3E"
			/>
			<source
				media="(min-width: 1024px)"
				type="image/webp"
				data-srcs="{{ img | resize( 208, 270, 'center' ) | towebp }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 208 270'%3E%3C/svg%3E"
			/>
			<img
				data-src="{{ img | resize( 208, 270, 'center' ) }}"
				src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 208 270'%3E%3C/svg%3E"
				class="lazyload"
				alt="{{ img.title }}"
			/>
		</picture>
			<div>
				{% if fields.header %}
					<h2>{{ fields.header }}</h2>
				{% endif %}
				<div>
					{{ fields.opis }}
					<a href="{{ fields.link.url }}" title="{{ fields.link.title }}" class="link" target="_blank">
						{{ fields.link.title }}
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
