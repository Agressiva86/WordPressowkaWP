{% set img = Image( fields.obrazek ) %}
<div class="wordpressowka-block">
    <div class="wordpressowka-link photobg" role="link">
        <picture role="img">
			{% if fields.disable_lazy_load %}
				<source
					media="(max-width:640px)"
					type="image/webp"
					srcset="{{ img | resize( 640, 900, 'center' ) | towebp }}"
					width="640"
					height="900"
				/>
				<source
					media="(max-width:640px)"
					srcset="{{ img | resize( 640, 900, 'center' ) }}"
					width="640"
					height="900"
				/>
				<source
					media="(min-width: 641px) and (max-width:1023px)"
					type="image/webp"
					srcset="{{ img | resize( 1024, 600, 'center' ) | towebp }}"
					width="1024"
					height="600"
				/>
				<source
					media="(min-width: 641px) and (max-width:1023px)"
					srcset="{{ img | resize( 1024, 600, 'center' ) }}"
					width="1024"
					height="600"
				/>
				<source
					media="(min-width:1024px)"
					type="image/webp"
					srcset="{{ img | resize( 1135, 500, 'center' ) | towebp }}"
					width="1135"
					height="500"
				/>
				<img
					src="{{ img | resize( 1135, 500, 'center' ) }}"
					alt="{{ img.title }}"
					width="1135"
					height="500"
				/>
			{% else %}
				<source
					media="(max-width:640px)"
					type="image/webp"
					data-srcset="{{ img | resize( 640, 900, 'center' ) | towebp }}"
					srcset="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 640 900'%3E%3C/svg%3E"
					width="640"
					height="900"
				/>
				<source
					media="(max-width:640px)"
					data-srcset="{{ img | resize( 640, 900, 'center' ) }}"
					srcset="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 640 900'%3E%3C/svg%3E"
					width="640"
					height="900"
				/>
				<source
					media="(min-width: 641px) and (max-width:1023px)"
					type="image/webp"
					data-srcset="{{ img | resize( 1024, 600, 'center' ) | towebp }}"
					srcset="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 600'%3E%3C/svg%3E"
					width="1024"
					height="600"
				/>
				<source
					media="(min-width: 641px) and (max-width:1023px)"
					data-srcset="{{ img | resize( 1024, 600, 'center' ) }}"
					srcset="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 600'%3E%3C/svg%3E"
					width="1024"
					height="600"
				/>
				<source
					media="(min-width:1024px)"
					type="image/webp"
					data-srcset="{{ img | resize( 1135, 500, 'center' ) | towebp }}"
					srcset="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1135 500'%3E%3C/svg%3E"
					width="1135"
					height="500"
				/>
				<img
					data-src="{{ img | resize( 1135, 500, 'center' ) }}"
					class="lazyload"
					alt="{{ img.title }}"
					src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1135 500'%3E%3C/svg%3E"
					width="1135"
					height="500"
				/>
			{% endif %}
        </picture>
        <div class="inner">
			{% if fields.header %}
            	<h2>{{ fields.header }}</h2>
			{% endif %}
			{{ fields.opis }}
			<a href="{{ fields.link.url }}" title="{{ fields.link.title }}" class="link" target="_blank">{{ fields.link.title }}</a>
        </div>
    </div>
</div>
