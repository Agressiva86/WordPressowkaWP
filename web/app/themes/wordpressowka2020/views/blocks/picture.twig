{% set img = Image( fields.obrazek ) %}

<div class="wordpressowka-block">
    <div class="wordpressowka-link photo" role="link">
        <picture role="img">
			<source
				media="(max-width:880px)"
				type="image/webp"
                srcset="{{ img | resize( 880, 450, 'center' ) | towebp }}"
			/>
			<source
				media="(max-width:880px)"
                srcset="{{ img | resize( 880, 450, 'center' ) }}"
			/>
			<source
				media="(min-width: 8811px) and (max-width:1023px)"
				type="image/webp"
                srcset="{{ img | resize( 1024, 900, 'center' ) | towebp }}"
			/>
            <source
				media="(min-width: 8811px) and (max-width:1023px)"
                srcset="{{ img | resize( 1024, 900, 'center' ) }}"
			/>
			<source
				media="(min-width: 1024px)"
				type="image/webp"
                srcset="{{ img | resize( 208, 270, 'center' ) | towebp }}"
			/>
            <img
                src="{{ img | resize( 208, 270, 'center' ) }}"
				alt="{{ img.title }}"
			/>
       </picture>
        <div class="inner">
			{% if fields.header %}
            	<h2>{{ fields.header }}</h2>
			{% endif %}
            {{ fields.opis }}
			<div>
				<a href="{{ fields.link.url }}" title="{{ fields.link.title }}" class="link" target="_blank">{{ fields.link.title }}</a>
			</div>
        </div>
    </div>
</div>
